        {% set wivrn_total = wivrn_total + opinion.wivrn %}
        {% set wivrn_count = wivrn_count + 1 %}
    {% endif %}
{% endfor %}

{% if steamVR_count > 0 %}
    {% set steamVR_avg = steamVR_total / steamVR_count %}
{% else %}
    {% set steamVR_avg = 0 %}
{% endif %}

{% if monado_count > 0 %}
    {% set monado_avg = monado_total / monado_count %}
{% else %}
    {% set monado_avg = 0 %}
{% endif %}

{% if alvr_count > 0 %}
    {% set alvr_avg = alvr_total / alvr_count %}
{% else %}
    {% set alvr_avg = 0 %}
{% endif %}

{% if wivrn_count > 0 %}
