    {% set steamVR_total = 0 %}
{% set steamVR_count = 0 %}
{% set monado_total = 0 %}
{% set monado_count = 0 %}
{% set alvr_total = 0 %}
{% set alvr_count = 0 %}
{% set wivrn_total = 0 %}
{% set wivrn_count = 0 %}

{% set sortedOpinions = opinions | sort(attribute='date') | reverse %}
{% for opinion in sortedOpinions %}
    {% if opinion.steamVR != 0 %}
        {% set steamVR_total = steamVR_total + opinion.steamVR %}
        {% set steamVR_count = steamVR_count + 1 %}
    {% endif %}
    
