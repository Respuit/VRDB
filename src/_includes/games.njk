        {% set monado_total = monado_total + opinion.monado %}
        {% set monado_count = monado_count + 1 %}
    {% endif %}

    {% if opinion.alvr != 0 %}
        {% set alvr_total = alvr_total + opinion.alvr %}
        {% set alvr_count = alvr_count + 1 %}
    {% endif %}

